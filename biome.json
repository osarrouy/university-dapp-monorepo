{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["!.svelte-kit/**/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 100,
    "formatWithErrors": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDebugger": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "off",
        "noUnusedVariables": "warn",
        "noUnusedImports": "error"
      },
      "complexity": {
        "noUselessFragments": "error",
        "useOptionalChain": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5",
      "bracketSpacing": true
    }
  }
}
