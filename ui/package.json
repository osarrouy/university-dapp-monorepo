{
	"name": "@distributedgallery/ui",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"watch": "vite build --watch && svelte-kit --watch sync && svelte-package --watch && publint",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package:dev": "svelte-package --watch",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./lib/styles/reset.css": "./dist/styles/reset.css",
		"./lib/styles/app.css": "./dist/styles/app.css",
		"./lib/styles/fonts.css": "./dist/styles/fonts.css",
		"./styles/reset.css": "./dist/styles/reset.css",
		"./styles/app.css": "./dist/styles/app.css",
		"./styles/fonts.css": "./dist/styles/fonts.css"
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@sveltejs/kit": "^2.9.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.3",
		"@biomejs/cli-darwin-arm64": "^2.0.3",
		"@eslint/compat": "^1.2.4",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"mdsvex": "^0.11.2",
		"postcss": "^8.4.49",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"sass": "^1.82.0",
		"svelte": "^5.7.1",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.17.0",
		"vite": "^6.0.3"
	},
	"dependencies": {
		"@reown/appkit": "^1.7.10",
		"@reown/appkit-adapter-wagmi": "^1.7.10",
		"@wagmi/connectors": "^5.8.5",
		"@wagmi/core": "^2.17.3",
		"viem": "^2.31.3",
		"wagmi": "^2.15.6"
	}
}
